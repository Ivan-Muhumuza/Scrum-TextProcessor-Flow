<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="800.0" prefWidth="400.0" spacing="12.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.TextProcessorController">
    <Label text="Input Text:" />
    <TextArea fx:id="inputArea" prefHeight="100.0" prefWidth="300.0" />

    <Label text="Regex Pattern:" />
    <TextField fx:id="regexPattern" prefWidth="300.0">
        <padding>
            <Insets bottom="10.0" top="10.0" />
        </padding>
    </TextField>

    <Label text="Replacement Text:" />
    <TextField fx:id="replacementText" prefWidth="300.0">
        <padding>
            <Insets bottom="10.0" top="10.0" />
        </padding>
    </TextField>

    <!-- HBox for buttons to align them horizontally -->
    <HBox alignment="CENTER" spacing="8">
        <Button style="-fx-background-color: #87CEEB;" text="Match" textFill="WHITE">
            <HBox.margin>
                <Insets right="8.0" />
            </HBox.margin>
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>
        <Button style="-fx-background-color: #50C878;" text="Replace" textFill="WHITE">
            <HBox.margin>
                <Insets right="8.0" />
            </HBox.margin>
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>
        <Button text="Clear">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>
    </HBox>

    <Label text="Result:" />
    <TextArea fx:id="resultArea" prefHeight="100.0" prefWidth="300.0" />

    <Separator prefHeight="5.0" prefWidth="300.0">
        <VBox.margin>
            <Insets bottom="20.0" top="20.0" />
        </VBox.margin>
    </Separator>

    <Label text="Data Input:" />
    <TextField fx:id="dataInput" prefWidth="300.0">
        <padding>
            <Insets bottom="10.0" top="10.0" />
        </padding>
    </TextField>

    <!-- HBox for buttons to align them horizontally -->
    <HBox alignment="CENTER" spacing="8">
        <Button style="-fx-background-color: #50C878;" text="Add" textFill="WHITE">
            <HBox.margin>
                <Insets right="8.0" />
            </HBox.margin>
            <font>
                <Font size="12.0" />
            </font>
        </Button>
        <Button style="-fx-background-color: #1e90ff;" text="Update" textFill="WHITE">
            <HBox.margin>
                <Insets right="8.0" />
            </HBox.margin>
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>
        <Button style="-fx-background-color: #FF6347;" text="Delete" textFill="WHITE">
            <HBox.margin>
                <Insets right="8.0" />
            </HBox.margin>
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>
        <Button text="Clear">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>
    </HBox>

    <Label text="Data List:" />
    <ListView fx:id="dataList" prefWidth="300.0" prefHeight="150.0" />
    <padding>
        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
    </padding>
</VBox>
